# Upstage API 키
UPSTAGE_API_KEY=up_XXXXXXXXXXXXXXXX

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=True

# 데이터베이스 설정
CHROMA_DB_PATH=./chroma_db

# 파일 업로드 설정
